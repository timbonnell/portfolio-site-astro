---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Tim Bonnell">
	<section>
		<div class='avatar-container'>
			<img class='avatar' width="200" src="./avatar.jpeg" height="200" alt="Tim Bonnell">
		</div>
		<div class='avatar-container'>
			<h1>Tim Bonnell</h1>
			<h2>Currently working on <a href='https://txtsquad.com' target="_blank">TxtSquad</a> ðŸš€</h2>
		</div>
	</section>
</Layout>

<style>

	.avatar {
		border-radius: 50%;
		border: 2px solid #fff;
		box-shadow: 0 0 0 2px #fff;
		max-width: 100px;
		height: auto;
	}

	.avatar-container{
		display: flex;
		flex-direction: column;
		min-height: 100%;
		justify-content: center;
	}
	section{ 
		display: flex;
		min-height: 50vh;
		column-gap: 30px;
	}
	@media only screen and (max-width: 500px) {
        section {
			flex-direction: column;
			row-gap: 0px;
			min-height: 100%;
      }
	  h1,h2{
		text-align: center;
	  }
  }

	h1 {
		padding-top: 1em;
		margin: 0;
	}
	h2 {
		padding: 0 0;
	}
	a{
		color: hsla(53, 100%, 52.0%, 0.956);
	}

</style>
